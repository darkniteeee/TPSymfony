{% apply spaceless %}

    <!doctype html>
    <html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="{{ asset('img/logo1.png') }}">

        <title>{% block title %}sortir.com{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    </head>

    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><strong>SORTIR.COM</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('accueil_accueil') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('participant_inscrire') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Les sorties</a>
                        </li>
{#                        {% if app.user %}#}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('participant_modifier_profil') }}">Mon profil</a>
                        </li>
{#                        {% endif %}#}

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <section class="jumbotron text-center">
            <div class="container">
                {% block informations %}{% endblock %}
            </div>
        </section>

        <div class="container">
            {% block main %}{% endblock %}
        </div>
    </main>

    <footer class="text-muted">

        <div class="container">
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
            <p>SORTIR.COM &copy; {{ "now" | date('Y') }} ** Pusher Puller **  </p>
        </div>

    </footer>

    <script src=" {{asset ('js/jquery-3.2.1.slim.min.js')}}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    </body>
    </html>

{% endapply %}
