{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Page de profil{% endblock %}


{% block informations %}
    {% if app.user.PhotoProfil %}
        <img src="{{ asset('uploads/users/photos/' ~ app.user.PhotoProfil) }}" alt="Photo_de_profil" class="img-thumbnail rounded img-fluid">
    {% endif %}
    <h1 class="jumbotron-heading">Page de profil</h1><br/>
{% endblock %}

{% block main %}
  {% form_theme formProfil 'bootstrap_4_layout.html.twig' %}

    {{ form_start(formProfil) }}

    <div class="style_1">
        {{ form_row(formProfil.pseudo) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.nom) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.prenom) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.telephone) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.email) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.plainPassword) }}
    </div>

    <div class="style_1">
        {{ form_row(formProfil.site_id) }}
    </div><br>

    <div class="style_1">
        {{ form_row(formProfil.photo_profil) }}
    </div><br>

    <div class="style_1">
        {{ form_row(formProfil.submit) }}
    </div>

    <div class="row">



    {{ form_end(formProfil) }}

    <br>
    <a href="{{ path('participant_modifier_password') }}">
        <input type="button" value="Modifier le mot de passe">
    </a>

{% endblock %}