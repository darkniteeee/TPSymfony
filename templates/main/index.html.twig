{% extends 'base.html.twig' %}
{% block title %}{{ parent() }}: Page d'accueil{% endblock %}

{% block informations %}
    {% if app.user%}
    <h2 class="jumbotron-heading">Bonjour  {{ app.user.prenom }} {{ app.user.nom }}</h2><br/>
        <div class="col mt-3 mb-3 text-center">
        </div>
    {%else%}
    <h2 class="jumbotron-heading">Bonjour </h2><br/>
        <p> Il semblerait que vous ne soyez pas connecté... </p><br>
    {%endif%}
{% endblock %}

{% block main %}

    <h5 class="jumbotron-heading"> <center> Bienvenue sur le site des sorties collectives et participatives de l'ENI ! </center></h5> <br>

    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits/Places</th>

            </tr>
            </thead>
            <tbody>

            {% for sortie in sorties %}
                <tr>
                    <td> </td>
                    <td>{{ sortie.NomSortie }}</td>
                    <td>{{ sortie.DateDebut|date('d/m/Y H:i:s') }}</td>
                    <td>{{ sortie.DateLimiteInscription|date('d/m/Y H:i:s') }}</td>
                    <td>{{ sortie.inscrits|length }}/{{ sortie.NbInscriptionMax }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}





