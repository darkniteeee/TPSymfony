{% extends 'base.html.twig' %}

{% block informations%}

    <h4>Date du jour : {{ "now"|date('d/m/Y') }}</h4>
{#    <h4>Participant: {{ app.participant.prenom }}.{{ ap.participant.nom }}</h4>#}

{% endblock %}

{% block main %}

<h1> Je suis le plus fort </h1>

{{ form(formRechercheSortie) }}


    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for sortie in sorties %}
                <tr>
                    <td> </td>
                    <td>{{ sortie.NomSortie }}</td>
                    <td>{{ sortie.DateDebut|date('d/m/Y H:i:s') }}</td>
                    <td>{{ sortie.DateLimiteInscription|date('d/m/Y H:i:s') }}</td>
                    <td>/{{ sortie.NbInscriptionMax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
{#                    <td>{{ sortie.Participants }}</td>#}
                    {% for organisateur in sortie.organisateur.organise %}
                    <td>{{ organisateur.id }}</td>
                    {% endfor %}
                    {% if (sortie.etat.libelle == "En cours") or (sortie.etat.libelle == "Fermé") %}
{#                        AND sortie.participant.participants !=null#}
                        <td><a href="#">Afficher</a></td>
                    {% endif %}
                    {% if sortie.etat.libelle == "Passée" or sortie.etat.libelle == "Ouverte"  %}
{#                        AND sortie.participant.participants !=null#}
                        <td><a href="#">Afficher</a> - <a href="#">Se désinscrire</a></td>
                    {% endif%}
{#                    {% if sortie.etat.libelle == "Ouvert" %}#}
{#                        AND sortie.participant.participants ==null#}
{#                        <td><a href="#">Afficher</a> - <a href="#">S'inscrire</a></td>#}
{#                    {% endif %}#}
                    {% if sortie.etat.libelle == "Créée" %}
{#                        AND sortie.participant.organisateur !=null#}
                        <td><a href="#">Modifier</a> - <a href="#">Publier</a></td>
                    {% endif %}
{#                    {% elseif sortie.etat.libelle == "Ouvert" %}#}
{#                        AND sortie.participant.organisateur !=null#}
{#                        <td><a href="#">Afficher</a> - <a href="#">Annuler</a></td>#}
{#                    {% endif %}#}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}