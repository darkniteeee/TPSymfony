{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Création d'une sortie{% endblock %}

{% block informations %}
    <h1 class="jumbotron-heading">Création d'une sortie</h1><br/>
{% endblock %}

{% block main %}
    {% form_theme formCreation 'bootstrap_4_layout.html.twig' %}

{{ form_start(formCreation)}}

    <h5> Ville organisatrice : {{ app.user.siteId.nomSite}} </h5>

    {{ form_row(formCreation.nom_sortie) }}

    {{ form_row(formCreation.date_debut) }}

    {{ form_row(formCreation.date_limite_inscription) }}

    {{ form_row(formCreation.nb_inscription_max) }}

    {{ form_row(formCreation.duree) }}

    {{ form_row(formCreation.description_sortie) }}

    {{ form_row(formCreation.ville) }}

    {{ form_row(formCreation.lieu) }}

<br>
    <input type="submit" value="Enregistrer">
    <input type="submit" value="Publier la sortie">
    <input type="reset" value="Annuler">

    {{form_end(formCreation)}}


{% endblock %}

{% block script %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{asset('js/listeliee.js') }}"></script>
{% endblock %}