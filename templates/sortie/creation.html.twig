{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Création d'une sortie{% endblock %}

{% block informations %}
    <h1 class="jumbotron-heading">Création d'une sortie</h1><br/>
{% endblock %}

{% block main %}

{#    {% form_theme formCreation 'bootstrap_4_layout.html.twig' %}#}

{{ form_start(formCreation)}}

    {{ form_row(formCreation.nom_sortie) }}

    <div class="mb-3">
        <label for="debut">Date de début</label>
        <input class="rounded form-control" type="date" id="debut" name="date_debut" value="{{ app.request.get('date_debut') }}">
        <label for="fin">Date de fin</label>
        <input class="rounded form-control" type="date" id="fin" name="date_fin" value="{{ app.request.get('date_fin') }}">
    </div>




    <input type="submit" value="Créer">

    {{form_end(formCreation)}}


{% endblock %}

{% block script %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{asset('js/listeliee.js') }}"></script>
{% endblock %}