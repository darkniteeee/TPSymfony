{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Création d'une sortie{% endblock %}

{% block informations %}
    <h1 class="jumbotron-heading">Création d'une sortie</h1><br/>
{% endblock %}

{% block main %}
    {% form_theme formCreation 'bootstrap_4_layout.html.twig' %}

{{ form_start(formCreation)}}

    <h5> Ville organisatrice : {{ app.user.siteId.nomSite }} </h5>

    {{ form_widget(formCreation) }}

<br>
    <input type="submit" class="btn btn-outline-primary btn-rounded" value="Enregistrer">

    <a href="{{path ('sortie_publier', {'id' : sortie.id})}}">
        <input type="button" value="Publier" class="btn btn-outline-primary btn-rounded">
    </a>

    <a href="{{ path('sortie_list') }}">
        <input type="button" value="Annuler" class="btn btn-outline-primary btn-rounded">
    </a>

    {{form_end(formCreation)}}

{% endblock %}

{% block script %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{asset('js/listeliee.js') }}"></script>
{% endblock %}